namespace Sequence

@[OEIS := A212681, offset := 0, maxIndex := 34, derive := true]
def A212681 (x : ℕ) : ℕ :=
  Int.toNat <| (((loop (λ (x y) ↦ (x - 2) + y) (x + x) 2 * x) / 2) / 2) * x

end Sequence