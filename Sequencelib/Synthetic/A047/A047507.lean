import Mathlib
import Sequencelib.Meta

open Synth

/-!
# A047507 sequence

## References

- T. Gauthier; and J. Urban (2023). Learning Program Synthesis for Integer Sequences from Scratch.
  The Thirty-Seventh AAAI Conference on Artificial Intelligence (AAAI-23)
-/

namespace Sequence

@[OEIS := A047507, offset := 1, maxIndex := 62, derive := true]
def A047507 (n : ℕ) : ℕ :=
  let x := n - 1
  Int.toNat <| loop (λ (x y) ↦ loop (λ (x y) ↦ (x % 2) + y) x (x * y)) 2 x + x

end Sequence