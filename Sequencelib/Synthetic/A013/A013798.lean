namespace Sequence

@[OEIS := A013798, offset := 0, maxIndex := 8, derive := true]
def A013798 (x : ℕ) : ℕ :=
  Int.toNat <| loop (λ (x _y) ↦ loop (λ (x y) ↦ (2 + y) * x) 2 x + x) (1 + (2 * (x + x))) 1

end Sequence